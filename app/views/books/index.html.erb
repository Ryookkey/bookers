<h2>Books</h2>
<table>
  <tr>
    <td>Title</td>
    <td>Body</td>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Delete", destroy_list_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= form_with model: @books, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
